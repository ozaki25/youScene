# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /youScene                     controllers.Blog.index(page: Integer ?= 1)
GET     /                             controllers.Blog.index(page: Integer = 1)
GET     /youScene/content/new         controllers.Blog.create()
POST    /youScene/content/new         controllers.Blog.accept()
GET     /youScene/content/:id/edit    controllers.Blog.edit(id: Long)
POST    /youScene/content/:id/edit    controllers.Blog.update(id: Long)
POST     /youScene/content/:id/delete  controllers.Blog.delete(id: Long)
GET     /youScene/content/:id         controllers.Blog.show(id: Long)
POST     /youScene/content/:id/like    controllers.Blog.like(id: Long)

GET     /youScene/signup              controllers.YouScene.entry()
POST    /youScene/signup              controllers.YouScene.signup()
GET     /youScene/login               controllers.YouScene.login()
POST    /youScene/login               controllers.YouScene.authenticate()
GET     /youScene/logout              controllers.YouScene.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                 controllers.Assets.at(path="/public", file)
