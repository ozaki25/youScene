# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /youScene/contents               controllers.Blog.index(page: Integer ?= 1)
GET     /youScene                        controllers.Blog.index(page: Integer ?= 1)
GET     /                                controllers.Blog.index(page: Integer = 1)
GET     /youScene/contents/new           controllers.Blog.create()
POST    /youScene/contents/new           controllers.Blog.accept()
GET     /youScene/contents/:id/edit      controllers.Blog.edit(id: Long)
POST    /youScene/contents/:id/edit      controllers.Blog.update(id: Long)
POST    /youScene/contents/:id/delete    controllers.Blog.delete(id: Long)
GET     /youScene/contents/:id           controllers.Blog.show(id: Long)

POST    /youScene/contents/:id/like      controllers.LikesController.like(id: Long)
GET     /youScene/contents/:id/likes     controllers.LikesController.likes(id: Long)
GET     /youScene/contents/:id/accesses  controllers.AccessesController.accesses(id: Long)
POST    /youScene/tags/new               controllers.TagsController.create()
GET     /youScene/tags/:id               controllers.TagsController.tagsContents(id: Long)
GET     /youScene/tags                   controllers.TagsController.index()

GET     /youScene/signup                 controllers.YouScene.entry()
POST    /youScene/signup                 controllers.YouScene.signup()
GET     /youScene/login                  controllers.YouScene.login()
POST    /youScene/login                  controllers.YouScene.authenticate()
GET     /youScene/logout                 controllers.YouScene.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
