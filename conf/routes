# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Blog.index()
GET     /youScene                   controllers.Blog.index()
GET     /youScene/content/new       controllers.Blog.create()
POST    /youScene/content/new       controllers.Blog.accept()
GET     /youScene/content/:id       controllers.Blog.show(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
